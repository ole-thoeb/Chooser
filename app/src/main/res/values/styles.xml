<resources>

    <style name="LightAppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorOnBackground">@android:color/black</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorSecondaryDark</item>
        <item name="colorSecondary">@color/colorSecondaryDark</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorConfirm">@color/colorConfirm</item>
        <item name="textColorSubtle">@android:color/tertiary_text_light</item>
        <item name="buttonSelectColor">@color/buttonSelectColorLight</item>
        <item name="backgroundColor">@color/materialBackgroundLight</item>
        <item name="cardBoarder">@android:color/transparent</item>
        <item name="mCardBackgroundColor">@color/cardview_light_background</item>
        <item name="selectedItemBackground">?attr/colorSecondary</item>
        <item name="toolbarIconColor">@android:color/black</item>
        <item name="materialCardViewStyle">@style/CardViewBase</item>
        <item name="actionModeStyle">@style/CAB</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back</item>
        <item name="toolbarStyle">@style/ToolbarLight</item>
        <item name="statusBarColor">@android:color/darker_gray</item>
        <item name="android:statusBarColor">?attr/statusBarColor</item>
        <item name="alertDialogTheme">@style/DialogStyleLight</item>
    </style>

    <style name="LightAppTheme.ColoredActionBar">
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back</item>
        <item name="toolbarStyle">@style/ToolbarColored</item>
        <item name="statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:statusBarColor">?attr/statusBarColor</item>
        <item name="toolbarIconColor">?attr/colorOnPrimary</item>
    </style>

    <style name="LightAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkAppTheme" parent="Theme.MaterialComponents">
        <item name="colorOnBackground">@android:color/white</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorSecondaryDark</item>
        <item name="colorSecondary">@color/colorSecondaryDark</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorConfirm">@color/colorConfirm</item>
        <item name="textColorSubtle">@android:color/tertiary_text_light</item>
        <item name="buttonSelectColor">@color/buttonSelectColorLight</item>
        <item name="backgroundColor">@color/materialBackgroundDark</item>
        <item name="cardBoarder">@android:color/transparent</item>
        <item name="mCardBackgroundColor">@color/cardview_dark_background</item>
        <item name="selectedItemBackground">?attr/colorSecondary</item>
        <item name="toolbarIconColor">@android:color/white</item>
        <item name="materialCardViewStyle">@style/CardViewBase</item>
        <item name="actionModeStyle">@style/CAB</item>
        <item name="actionModeCloseDrawable">@drawable/ic_arrow_back</item>
        <item name="toolbarStyle">@style/ToolbarDark</item>
        <item name="statusBarColor">@android:color/black</item>
        <item name="android:statusBarColor">?attr/statusBarColor</item>
        <item name="alertDialogTheme">@style/DialogStyleDark</item>
    </style>

    <style name="DarkAppTheme.ColoredActionBar">
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back</item>
        <item name="toolbarStyle">@style/ToolbarColored</item>
        <item name="statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:statusBarColor">?attr/statusBarColor</item>
        <item name="toolbarIconColor">?attr/colorOnPrimary</item>
    </style>

    <style name="BlackAppTheme" parent="DarkAppTheme">
        <item name="backgroundColor">@android:color/black</item>
        <item name="cardBoarder">@drawable/card_boarder</item>
        <item name="mCardBackgroundColor">@android:color/black</item>
        <item name="toolbarStyle">@style/ToolbarBlack</item>
    </style>

    <!--Dialog Styles-->

    <style name="DialogStyleLight" parent="Base.Theme.MaterialComponents.Light.Dialog">
        <item name="buttonBarNegativeButtonStyle">@style/NegDialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/PosDialogButton</item>
    </style>

    <style name="DialogStyleDark" parent="Base.Theme.MaterialComponents.Dialog">
        <item name="buttonBarNegativeButtonStyle">@style/NegDialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/PosDialogButton</item>
    </style>

    <style name="BaseDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="NegDialogButton" parent="BaseDialogButton">
        <item name="android:textColor">?attr/colorError</item>
        <item name="rippleColor">?attr/colorError</item>
    </style>

    <style name="PosDialogButton" parent="BaseDialogButton">
        <item name="android:textColor">?attr/colorConfirm</item>
        <item name="rippleColor">?attr/colorConfirm</item>
    </style>

    <!--Toolbar Styles-->

    <style name="ToolbarLight" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@android:color/white</item>
        <item name="titleTextColor">@android:color/black</item>
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
    </style>

    <style name="ToolbarDark" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/materialAppBarColor</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
    </style>

    <style name="ToolbarBlack" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@android:color/black</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
    </style>
    
    <style name="ToolbarColored" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
    </style>

    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <!--CardView Styles-->

    <style name="CardViewBase" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">@dimen/cardCornerRadius</item>
    </style>

    <!--ContextualActionBar Styles-->

    <style name="CAB" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/CABTitleStyle</item>
        <item name="background">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CABTitleStyle" parent="Base.TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!--widget Styles-->

</resources>
