<resources>

    <style name="LightAppTheme" parent="Theme.AppCompat.Light">
        <item name="textColorAgainstBackground">@android:color/black</item>
        <item name="textColorAgainstAccent">@android:color/white</item>
        <item name="fabIconColor">@android:color/white</item>
        <item name="generalIconColor">@android:color/black</item>
        <item name="darkAccentColor">@color/darkHighlightColor</item>
        <item name="colorAccent">@color/colorAccentLightTheme</item>
        <item name="textColorSubtle">@android:color/tertiary_text_light</item>
        <item name="buttonSelectColor">@color/buttonSelectColorLight</item>
        <item name="backgroundColor">@color/materialBackgroundLight</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="cardBoarder">@android:color/transparent</item>
        <item name="mCardBackgroundColor">@color/cardview_light_background</item>
        <item name="selectedItemBackground">@color/itemSelectColorLight</item>
        <item name="actionModeStyle">@style/CAB</item>
    </style>

    <style name="LightAppTheme.ColoredActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorAccentLightTheme</item>
        <item name="colorPrimaryDark">@color/darkHighlightColor</item>
        <item name="colorAccent">@color/colorAccentLightTheme</item>


        <item name="textColorAgainstBackground">@android:color/black</item>
        <item name="textColorAgainstAccent">@android:color/white</item>
        <item name="fabIconColor">@android:color/white</item>
        <item name="generalIconColor">@android:color/white</item>
        <item name="darkAccentColor">@color/darkHighlightColor</item>
        <item name="textColorSubtle">@android:color/tertiary_text_light</item>
        <item name="buttonSelectColor">@color/buttonSelectColorLight</item>
        <item name="backgroundColor">@color/materialBackgroundLight</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="cardBoarder">@android:color/transparent</item>
        <item name="mCardBackgroundColor">@color/cardview_light_background</item>
        <item name="selectedItemBackground">@color/itemSelectColorLight</item>
        <item name="actionModeStyle">@style/CAB</item>
    </style>


    <style name="DarkAppTheme" parent="Theme.AppCompat">
        <item name="textColorAgainstBackground">@android:color/white</item>
        <item name="textColorAgainstAccent">@android:color/white</item>
        <item name="fabIconColor">@android:color/white</item>
        <item name="generalIconColor">@android:color/white</item>
        <item name="darkAccentColor">@color/darkHighlightColor</item>
        <item name="colorAccent">@color/colorAccentDarkTheme</item>
        <item name="textColorSubtle">@android:color/tertiary_text_dark</item>
        <item name="buttonSelectColor">@color/buttonSelectColorDark</item>
        <item name="backgroundColor">@color/materialBackgroundDark</item>
        <item name="cardBoarder">@android:color/transparent</item>
        <item name="mCardBackgroundColor">@color/cardview_dark_background</item>
        <item name="selectedItemBackground">@color/itemSelectColorDark</item>
        <item name="actionModeStyle">@style/CAB</item>
    </style>

    <style name="DarkAppTheme.ColoredActionBar">
        <item name="colorPrimary">@color/colorAccentLightTheme</item>
        <item name="colorPrimaryDark">@color/darkHighlightColor</item>
    </style>

    <style name="ActionBarStyle" parent="Base.Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleStyle</item>
        <item name="background">?android:colorPrimary</item>
    </style>

    <style name="ActionBarTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="CAB" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">@style/CABTitleStyle</item>
        <item name="background">?attr/colorPrimary</item>
    </style>

    <style name="CABTitleStyle" parent="Base.TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textSize">20dp</item>
    </style>
    

    <style name="BlackAppTheme" parent="DarkAppTheme">
        <item name="backgroundColor">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="cardBoarder">@drawable/card_boarder</item>
        <item name="mCardBackgroundColor">@android:color/black</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--widget Styles-->

</resources>
