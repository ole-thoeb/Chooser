<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            <group
                android:name="fill"
                android:translateX="3"
                android:translateY="-2">
                <clip-path
                    android:name="fillmask"
                    android:pathData="M 3 20 L 3 20 L 21 20 L 21 20 Z"/>
                <path
                    android:name="f_body"
                    android:pathData="M 0 22 L 18 22 L 14 10 L 4 10 Z"
                    android:fillColor="#d80a0a"
                    android:strokeWidth="1"/>
                <path
                    android:name="f_top"
                    android:pathData="M 9 10 C 10.66 10 12 8.66 12 7 C 12 5.34 10.66 4 9 4 C 7.34 4 6 5.34 6 7 C 6 8.66 7.34 10 9 10"
                    android:fillColor="#d80a0a"
                    android:strokeWidth="1"/>
            </group>
            <group
                android:name="line"
                android:translateX="3"
                android:translateY="-2">
                <path
                    android:name="l_body"
                    android:pathData="M 0 22 L 18 22 L 14 10 L 4 10 Z"
                    android:strokeColor="#000"
                    android:strokeWidth="1"/>
                <path
                    android:name="l_top"
                    android:pathData="M 9 10 C 10.66 10 12 8.66 12 7 C 12 5.34 10.66 4 9 4 C 7.34 4 6 5.34 6 7 C 6 8.66 7.34 10 9 10"
                    android:strokeColor="#000"
                    android:strokeWidth="1"/>
            </group>
        </vector>
    </aapt:attr>
    <target android:name="fillmask">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="pathData"
                android:duration="300"
                android:valueFrom="M 0 22 L 18 22 L 18 22 L 0 22 Z"
                android:valueTo="M 0 22 L 18 22 L 18 4 L 0 4 Z"
                android:valueType="pathType"
                android:interpolator="@android:anim/linear_interpolator"/>
        </aapt:attr>
    </target>
</animated-vector>
